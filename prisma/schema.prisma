// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Player {
  id           String                           @id @default(cuid())
  supabaseId   String                           @unique
  email        String                           @unique
  firstName    String?
  lastName     String?
  skillLevel   String?
  birthday     DateTime?                        @db.Date
  createdAt    DateTime                         @db.Timestamptz(3)
  // Last time a player with a confirmed email address logged in.
  lastSignIn   DateTime?                        @db.Timestamptz(3)
  coordinates  Unsupported("geography(Point)")?
  city         String?
  description  String?
  gender      String?
  // Whether the player has been approved by an admin to have their profile 
  // visible to the public.
  isApproved   Boolean                          @default(false)
  profilePictureUrl  String?                     @unique
  isProfilePictureApproved Boolean              @default(false)
  sport     String?
  @@index([coordinates], name: "player_coordinates_index", type: Gist)
}