generator client {
  provider = "prisma-client-js"
  binaryTargets   = "native"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

